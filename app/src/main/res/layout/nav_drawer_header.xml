<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/background_nav_header"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_profile_image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/ic_account_circle_black_48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/drawer_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/drawer_profile_mail"
        android:layout_alignLeft="@id/profile_image"
        android:layout_alignStart="@id/profile_image"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:paddingBottom="4dp"
        android:text="User Name"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/drawer_profile_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example@gmail.com"
        android:gravity="start"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/drawer_profile_name"
        android:layout_alignStart="@id/drawer_profile_name"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textColor="#000000" />

</RelativeLayout>